# Server Configuration
PORT=3000
NODE_ENV=production

# Database Configuration
MONGODB_URI=mongodb://127.0.0.1:27017/book_store
# For production, use your MongoDB Atlas connection string:
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/book_store

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=30d

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Email Configuration
# Option A: Well-known service (easier)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password_here # Use App Password for Gmail (2FA required)
# Option B: Custom SMTP (override service if you set host)
# EMAIL_HOST=smtp.yourprovider.com
# EMAIL_PORT=587
# EMAIL_SECURE=false # use true for port 465
# Optional custom from header
# EMAIL_FROM=Book Store <no-reply@yourdomain.com>

# Session Secret
SESSION_SECRET=your_session_secret_here 